{
  "name": "simple-website-boilerplate",
  "version": "1.0.0",
  "description": "A simple website boilerplate with BrowserSync and Sass",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "browser-sync": "^2.10.1",
    "cssnano": "^3.4.0",
    "node-sass": "^4.5.2",
    "postcss-cli": "^4.0.0"
  },
  "scripts": {
    "start": "browser-sync start --server --files \"*.html, dist/styles/*\"",
    "build": "./node_modules/node-sass/bin/node-sass src/styles/ -o dist/styles/ && ./node_modules/postcss-cli/bin/postcss -r -u autoprefixer -u cssnano dist/styles/*",
    "watch": "./node_modules/node-sass/bin/node-sass --watch src/styles/ -o dist/styles/",
    "publish": "git branch -D gh-pages; git checkout -b gh-pages && npm run build && git add -f dist/ && git commit -m 'Publish website' && git push -fu origin gh-pages; git checkout master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satya164/simple-website-boilerplate.git"
  },
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com> (https://github.com/satya164/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satya164/simple-website-boilerplate/issues"
  },
  "homepage": "https://github.com/satya164/simple-website-boilerplate#readme"
}
